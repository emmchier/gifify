<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/base_space_40"
    android:id="@+id/linearDefaultSearchContainer"
    android:background="@color/tagLightColor">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_gifs_yet"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/disableTintColor"
            android:textSize="@dimen/base_space_40"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:alpha=".5"
            android:contentDescription="@string/empty_description"
            android:src="@drawable/ic_search" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
